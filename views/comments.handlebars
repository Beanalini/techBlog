<!--Post details-->
<div class="card  my-2">
    <div class="card-header ">
      <h5> <a href="#" class="card-link">{{title}} {{id}}</a></h5>
      <span class = "float-right fs-5"><p>Posted by {{user_name}} {{id}}on {{format_date date_created}}</p></span>     
       
    </div>
    <div class="card-body rounded">
      
      <p class="card-text">{{description}}</p>
    
    </div>
    
  </div>
<!--Comment details-->
{{#each commentSer as |comment|}}
  <div class="card  my-2">
    <div class="card-header ">
     
       <p><span class = "float-right fs-5">Comment by{{comment.user.user_name}}  on {{format_date comment.date_created}} </span></p>
    </div>
    <div class="card-body rounded">
      
      <p class="card-text">{{comment.message}}</p>
    
    </div>
    
  </div>
  {{/each}}

  <div class="card">
    <div class="card-header">                
    </div>
        <div class="card-body">   
            <h3 class="card-title text-center">Add a Comment</h3>             
            <form class="form" id="form-login">
                <span id="span" data-PostId="{{id}}" >
                <div class="mb-3">
                    <label for="comment-text" class="form-label">Post Description</label>
                    <textarea type="textarea" class="form-control" id="comment-text"></textarea>
                </div>
                <div class="gap-2 text-center">
                    <button class="btn-lg btn-primary" id="new-comment"  type="submit">Add Comment</button>
                </div>                      
            <form>
        </div>
</div>

<script src="/js/addComment.js"></script>