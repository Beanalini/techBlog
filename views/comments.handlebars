<!--Post details-->
<div class="card  my-2">
    <div class="card-header ">
      <h5> {{title}} </h5>
      <span class = "float-right fs-5"><p>Posted by {{user.user_name}} on {{format_date date_created}} </p></span>            
    </div>
    <div class="card-body rounded">      
      <p class="card-text">{{description}}</p>     
    </div>    
  </div>
<!--Comment details-->
{{#each commentSer as |comment|}}
  <div class="card  my-2">
    <div class="card-header ">
     
       <p><span class = "float-right fs-5">Comment posted by {{comment.user.user_name}}  on {{format_date comment.date_created}}</span></p>
    </div>
    <div class="card-body rounded">      
      <p class="card-text">{{comment.message}}</p>      
    </div>
    <!-- Allow logged in user to edit their comments-->
    {{#if (ifSame comment.log_user comment.user_id)}}
     <div class="card-footer text-muted">
             
              <a href="/api/comments/edit/{{comment.id}}" class="card-link">Edit comment</a>
              
            </div>  
    {{/if}}
  </div>
  {{/each}}  
  <div class="card">
    <div class="card-header">                
    </div>
        <div class="card-body">   
            <h3 class="card-title text-center">Add a Comment</h3>             
            <form class="form" id="form-login">
                <span id="span" data-PostId="{{id}}" >
                <div class="mb-3">
                    <label for="comment-text" class="form-label">Comment Text</label>
                    <textarea type="textarea" class="form-control" id="comment-text"></textarea>
                </div>
                <div class="gap-2 text-center">
                    <button class="btn-lg btn-primary" id="new-comment"  type="submit">Add Comment</button>
                </div>                      
            <form>
        </div>
</div>

<script src="/js/addComment.js"></script>