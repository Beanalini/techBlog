<h2>Your Posts</h2>

<div class = "container">
  {{#each posts as |post|}}
    <div class="card  my-2">
      <div class="card-header ">
        <span class="float-left"> <a class="card-header-link card-link" href="/api/posts/edit/{{post.id}}">{{post.title}}</a></span>
          <span class = "float-right ">Posted on {{format_date post.date_created}} </span>
      </div>
      <div class="card-body rounded">
        
        <p class="card-text">{{post.description}}</p>
      
      </div>
      
    </div>
  {{/each}}
      
  <div class="gap-2 text-center">
      <a href="/addPost" class="btn-lg btn-primary" type="button">Add New Post</a>
  </div>       
</div>

 
